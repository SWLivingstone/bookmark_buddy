<%= link_to "Change Password", edit_user_registration_path %>

<div class="row">
  <div class="col-sm-5">
    <h2 class="user-home-page">My Bookmarks</h2>
    <% @bookmarks.each do |bookmark| %>
      <div class="row owned-bookmarks">
        <div class="col-sm-7">
          <div >
            <h4>
              <%= bookmark.title %>
            </h4>
            <div class="url">
              <%= link_to bookmark.url,"http://#{bookmark.url}" %>
            </div>
          </div>
        </div>
        <div class="col-sm-5">
          <button class="btn btn-xs pull-right edit-button">
            <%= link_to "Edit Bookmark", edit_bookmark_path(bookmark), class: "edit-button" %>
          </button>
          <button class="btn-danger btn-xs pull-right">
            <%= link_to "Delete Bookmark", bookmark, method: :delete, data: {confirm: "Are you sure that you want to delete this bookmark?."}, remote: true%>
          </button>
        </div>
      </div>
    <% end %>
  </div>
  <div class="col-sm-2">

  </div>
  <div class="col-sm-5">
    <h2 class="user-home-page">Liked Bookmarks</h2>
    <% @likes.each do |like| %>
      <div class="row liked-bookmarks">
        <div class="col-sm-7">
          <h4>
            <%= "#{like.title}" %>
          </h4>
          <p>
            <%= link_to "#{like.url}", "http://#{like.url}" %>
          </p>
        </div>
        <div class="col-sm-5">
          <%= render partial: 'likes/like', locals: { bookmark: like } %>
        </div>
      </div>

    <% end %>
  </div>
</div>
